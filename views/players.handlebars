<header class="header" id="top">
    <div class="text-vertical-center">
        <h1 id="title1">Posted Dares</h1>
        <a href="/create"><button class="createpost">New Post +</button></a>
    </div>
    <div class="container">
    <div id="posts" class="row">
    {{#each posts}}
    <div class="col-sm-12">
    <form action="/join/{{this.id}}" method="POST">
    	<input type="hidden" name="playerid" value="" class="playerid">
		<ul id="singlepost" class="singlepost" style="overflow: auto; max-height: 70%; list-style: none; text-align: center">
		<li><b><u><h3>{{title}}</h3></u></b></li>
		<li><b>Dare:</b> {{text}}</li>
		<li><b>Points:</b> {{points}}</li>
		<li>Category: {{category}}</li>
		<li>Post ID: {{id}}</li>
		<button type="submit" id="join">Save</button>
		</ul>
		<hr style="border-color:white;">
	</form>
	</div>
	{{/each}}
	</div>
</header>

<script>
$(document).ready(function() {
	$(".playerid").attr("value", localStorage.playerId);
});
console.log($(".container").css("width"))

if (!localStorage.getItem("playerId")) {
    window.location.href = "/login2"
    }

</script>

